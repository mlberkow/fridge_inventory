<% Recipe.all.where(food_type: recipe).order(:content).each do |a| %>

<div class="panel <%=pane_color(a) %>">
  <!-- <div class="panel <%=a.ann_safe == false ? :'panel-ann-unsafe' : :'panel-success' %>"> -->
    <div class="panel-heading panel-relative text-center" id="<%= a.id %>">
      <%= a.content %>
        <%= link_to "<i class = 'glyphicon glyphicon-edit glyphicon-black-spaced' style='margin-right: 10px'></i>" .html_safe, edit_recipe_path(a),
          :class=> "icon-rightish" %>
          <%= link_to "<i class = 'glyphicon glyphicon-trash glyphicon-black-spaced'></i>" .html_safe, recipe_path(a),
            method: :delete, data: { confirm: "Are you sure you want to delete this meal?"}, :class=> "pull-right" %>
    </div>
    <table class="table table-responsive">
      <tr>
        <td>
          <!-- <div class="text-center">  -->
          <div
            class="text-center <%= a.quantity_upstairs == 0 ? :'list-group-item-danger' : :'list-group-item-success' %>">
            Upstairs Freezer</div>

          <div class="text-center panel-body">
            <%= a.quantity_upstairs %>
              <div class="pull-right btn-group btn-group-xs" role="group">
                <%= link_to "<i class ='glyphicon glyphicon-arrow-up glyphicon-margin'></i>" .html_safe,
                  increase_upstairs_recipe_path(a), method: :put %>
                  <%= link_to "<i class ='glyphicon glyphicon-arrow-down glyphicon-margin'></i>" .html_safe,
                    decrease_upstairs_recipe_path(a), method: :put %>
              </div>
          </div>
        </td>
        <td>
          <div
            class="text-center <%= a.quantity_downstairs == 0 ? :'list-group-item-danger' : :'list-group-item-success' %>">
            Downstairs Freezer</div>
          <div class="text-center panel-body">
            <%= a.quantity_downstairs %>
              <div class="pull-right btn-group btn-group-xs" role="group">
                <%= link_to "<i class ='glyphicon glyphicon-arrow-up glyphicon-margin'></i>" .html_safe,
                  increase_downstairs_recipe_path(a), method: :put %>
                  <%= link_to "<i class ='glyphicon glyphicon-arrow-down glyphicon-margin'></i>" .html_safe,
                    decrease_downstairs_recipe_path(a), method: :put %>
              </div>
          </div>
        </td>
      </tr>
    </table>

  </div>
<% end %>
